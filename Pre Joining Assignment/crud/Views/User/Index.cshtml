
@{
    ViewBag.Title = "Index";
}
@Html.Raw(TempData["LoginSuccessMessage"]);
<!doctype html>
<html lang="en">
<head>
    <title>ASSIGNMENT</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <style type="text/css">
        .l {
            float: left;
            width: 80%%;
        }

        .r {
            float: right;
            width: 20%;
        }

        .form-group {
            border: 1px solid black;
        }
    </style>
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <h1><a href="index.html" class="logo">PRODUCT MANAGMENT</a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    @Html.ActionLink("Product List", "Index","Home")
                </li>
                <li>
                    @Html.ActionLink("Add Product", "Create", "Home") 
                </li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">


            <div class="l">
                <h1 >Welcome @Session["Username"]</h1>

            </div>


            <div class="r">

                <h4>@Html.ActionLink("Logout", "Logout", "User")</h4>
            </div>




        </div>

        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/popper.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/main.js"></script>
</body>
</html>


 